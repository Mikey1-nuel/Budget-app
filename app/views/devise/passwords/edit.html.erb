<div class="">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="navbar">
    <%= link_to "ðŸ¢€", '/', class: 'back-link'%>
    <p class='nav-text'>NEW PASSWORD</p>
    <%= f.submit 'Change my password', class: 'login-submit-btn'%>
  </div>

  <div class="login-fields">
    <%= f.hidden_field :reset_password_token %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: 'Password', class: 'login-field' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm Password', class: 'login-field' %>
  </div>
<% end %>
</div>
